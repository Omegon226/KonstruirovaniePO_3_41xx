                                <DataGrid.Columns>
                                    <DataGridTextColumn x:Name="RouteIDColumn" Header="ID" Binding="{Binding Path=ID}" Width="100"></DataGridTextColumn>
                                    <DataGridTextColumn x:Name="RouteTravelTimeInHoursColumn" Header="Кол-во часов в поездке" Binding="{Binding Path=TravelTimeInHours}" Width="150"></DataGridTextColumn>
                                    <DataGridTextColumn x:Name="RouteHiddenColumn" Header="Скрытость" Binding="{Binding Path=Hidden}" Width="100"></DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem.Content>
                </TabItem>

