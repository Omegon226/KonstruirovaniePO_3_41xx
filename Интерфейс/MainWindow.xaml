                </TabItem>

                <TabItem x:Name="DayOfTheWeekTab">
                    <TabItem.Header>
                        <TextBlock Margin="3">DayOfTheWeek</TextBlock>
                    </TabItem.Header>
                    <TabItem.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.1*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
