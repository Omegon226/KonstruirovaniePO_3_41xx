<Window x:Class="Интерфейс.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Интерфейс"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="370" MinWidth="800" MaxHeight="500" MaxWidth="950">
    <Grid Background="#FF440D44">
        <Image Source="https://avtovokzal37.ru/images/avtovokzal_ivanovo.jpg" VerticalAlignment="Top" MinHeight="350" MaxHeight="500" Margin="0,20,0,0"></Image>

        <Grid VerticalAlignment="Top" Height="50" Background="Purple">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="300" MaxWidth="500"/>
                <ColumnDefinition MinWidth="154"/>
                <ColumnDefinition MinWidth="154"/>
                <ColumnDefinition MinWidth="154"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Автовокзал" Foreground="White" FontSize="32" Margin="66,0,65.288,0" HorizontalAlignment="Center"/>
            <Button Grid.Column="1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" >
                <Grid>
                    <TextBlock Text="Все маршруты" Foreground="White" FontSize="19"/>
                </Grid>
            </Button>
            <Button Grid.Column="2" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" >
                <Grid>
                    <TextBlock Text="Все рейсы" Foreground="White" FontSize="19"/>
                </Grid>
            </Button>
            <Button Grid.Column="3" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" >
                <Grid>
                    <TextBlock Text="Справка" Foreground="White" FontSize="19"/>
                    <Image Source="file:///C:/Users/ivanm/Downloads/pngwing.com.png" HorizontalAlignment="Right" Width="30" Margin="80,0,0,0"/>
                </Grid>
            </Button>
        </Grid>

        <Grid Width="600" Height="150" Background="#FF780078">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Column="0" Grid.ColumnSpan="2" Height="10" VerticalAlignment="Top" Background="#FFAA6CAA"></Grid>
            <TextBlock Grid.Row="0" Text="Куда поедем?" Foreground="White" FontSize="22" Margin="7"/>
            <Grid Grid.Column="0" Grid.Row="1">
                <TextBlock Text="Пункт Отправления" Foreground="White" Margin="50,0,0,0"/>
                <ComboBox Width="200" Height="30" Margin="0,15,0,0"></ComboBox>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">
                <TextBlock Text="Пункт Прибытия" Foreground="White" Margin="50,0,0,0"/>
                <ComboBox Width="200" Height="30" Margin="0,15,0,0"></ComboBox>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="2">
                <TextBlock Text="Дата выезда" Foreground="White" Margin="50,0,0,0"/>
                <DatePicker Margin="50,20,50,0"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="2">
                <Button Width="200" Height="35" Content="Найти маршрут"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
